{
    "name": "JUST GIVE THE RECIPE",
    "version": "1.02",
    "description": "Avoid scrolling through walls of text and images on food blogs and get the recipe right away.",
    "manifest_version": 2,  
    "permissions": [
        "storage",
        "contextMenus"
      ],
    "browser_action": {
        "default_popup": "options.html",
        "title": "Just Give Me The Recipe",
        "default_icon": "img/recipe-book.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "css": ["css/popup.css"],
        "js": ["js/jquery-3.3.1.min.js", "js/popup.js"]
    }]
  }